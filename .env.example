# Environment configuration for local development AND production deployment
# Copy this to .env and fill in your values
# IMPORTANT: Never commit .env file to version control!

# ==========================================
# DEVELOPMENT - Local testing and debugging
# ==========================================

FILEPATH=data/WA_Fn-UseC_-Telco-Customer-Churn.csv
FILEPATH_DATABRICKS=/databricks/driver/data/WA_Fn-UseC_-Telco-Customer-Churn.csv
CLEANING_LOGS=logs/data_cleaning.log
PREPROCESSING_LOGS=logs/data_preprocessing.log

# ==========================================
# PRODUCTION - Required for deployment
# ==========================================

# Databricks workspace URL
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Databricks API token or service principal token
# Generate at: https://docs.databricks.com/en/dev-tools/auth/pat.html
DATABRICKS_TOKEN=your-databricks-api-token

# Service principal for production job execution
# Format: Client ID from service principal
DATABRICKS_SERVICE_PRINCIPAL_NAME=your-sp-client-id

# Git commit SHA for deployment tracking
GIT_SHA=abc123def456

# Deployment environment (dev, staging, prod)
ENVIRONMENT=prod

# ==========================================
# OPTIONAL - For enhanced functionality
# ==========================================

# Email for failure notifications
ALERT_EMAIL=team@example.com

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Data validation thresholds
DATA_QUALITY_MIN_ROWS=100
DATA_QUALITY_MAX_NULL_RATIO=0.05

# Model performance thresholds
MODEL_MIN_AUC_SCORE=0.75
MODEL_MIN_PRECISION=0.70
MODEL_MIN_RECALL=0.65

# Data freshness threshold (hours)
DATA_FRESHNESS_MAX_AGE_HOURS=24

# ==========================================
# Databricks Resource Configuration
# ==========================================

# Feature table configuration
FEATURE_TABLE_CATALOG=churn
FEATURE_TABLE_SCHEMA=default
FEATURE_TABLE_NAME=features_balanced

# Monitoring table configuration
MONITORING_TABLE_CATALOG=churn
MONITORING_TABLE_SCHEMA=default
MONITORING_TABLE_NAME=inference_data

# Job configuration
JOB_MAX_CONCURRENT_RUNS=1
JOB_TIMEOUT_SECONDS=14400
JOB_MAX_RETRIES=2

# Cluster configuration
CLUSTER_SPARK_VERSION=15.4.x-scala2.12
CLUSTER_NODE_TYPE=i3.xlarge
CLUSTER_DRIVER_NODE_TYPE=i3.xlarge
CLUSTER_MIN_WORKERS=1
CLUSTER_MAX_WORKERS=1

# ==========================================
# CI/CD Configuration
# ==========================================

# GitHub Actions environment
GITHUB_ENVIRONMENT=databricks-production
GITHUB_REF_NAME=main

# Code coverage threshold (0.0 - 1.0)
CODE_COVERAGE_THRESHOLD=0.80
